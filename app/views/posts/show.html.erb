<%- model_class = Post -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:room) %>:</strong></dt>
  <dd><%= @post.room %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rate) %>:</strong></dt>
  <dd><%= @post.rate %>%</dd>
  <!-- <dt><strong><%= model_class.human_attribute_name(:available) %>:</strong></dt> -->
  <!-- <dd><%= @post.available %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:unavailable) %>:</strong></dt>
  <dd><%= @post.unavailable %></dd>
  <dt><strong><%= model_class.human_attribute_name(:windows) %>:</strong></dt>
  <dd><%= @post.windows %>台</dd>
  <dt><strong><%= model_class.human_attribute_name(:linux) %>:</strong></dt>
  <dd><%= @post.linux %>台</dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              posts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_post_path(@post), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              post_path(@post),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
