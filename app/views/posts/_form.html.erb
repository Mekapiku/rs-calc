<%= form_for @post, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :room, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :room, [Settings.mmr.acros.name, Settings.mmr.prism.name, Settings.mmr.media.name, Settings.mmr.other.name] %>
    </div>
  </div>

  <div class="control-group <%= @post.errors[:users].empty? ? '' : 'error' %>">
    <%= f.label "利用者数", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :users, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group <%= @post.errors[:unavailable].empty? ? '' : 'error' %>">
    <%= f.label "利用不可端末", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :unavailable, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group <%= @post.errors[:windows].empty? ? '' : 'error' %>">
    <%= f.label "Windows", :class => 'control-label' %>
    <div class="controls">
        <%= f.number_field :windows, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group <%= @post.errors[:linux].empty? ? '' : 'error' %>">
    <%= f.label "Linux", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :linux, :class => 'number_field'%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "利用証から計算", :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :calc_base, {:checked => false}, true, false %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn' %>
  </div>
<% end %>
